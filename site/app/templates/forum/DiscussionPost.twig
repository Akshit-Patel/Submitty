<div class="{{classes}}" id="{{post_id}}" style="margin-left:{{offset}}px;" reply-level="{{reply_level}}">
	{% if first %}
		{{title_html | raw }}
	{% endif %}
	<pre class='pre_forum'><p class="post_content" style="white-space: pre-wrap; ">{{post_content | raw }}</p></pre>		
	<hr style="margin-bottom:3px;">

	{% if display_option == 'tree' %}
		{% if not first %}
			<a class="btn btn-default btn-sm" style=" text-decoration: none;" onClick="replyPost({{post_id}})"> Reply</a>
		{% else %}
			<a class="btn btn-default btn-sm" style=" text-decoration: none;" onClick="$('html, #posts_list').animate({ scrollTop: document.getElementById('posts_list').scrollHeight }, 'slow');"> Reply</a>
		{% endif %}

		{% if user_group <= 2 %}
			<a class="btn btn-default btn-sm" style=" text-decoration: none;" onClick="showHistory({{post_id}})">Show History</a>
		{% endif %}
	{% endif %}

	{% if (user_group <= 3 or post_author == current_user) and first and thread_resolve_state == -1 %}
		<a class="btn btn-default btn-sm" style="text-decoration: none;" onClick="changeThreadStatus({{post_id}})" title="Mark thread as resolved">Mark as resolved</a>
	{% endif %}
	<span style="margin-top:8px;margin-left:10px;float:right;">

	{% if user_group <= 2 and post_author != current_user %}	
		<a style=" margin-right:2px;display:inline-block; color:black; " onClick='$(this).next().toggle();' title="Show/Hide email address"><i class="fas fa-envelope" aria-hidden="true"></i></a>
        <a href="mailto:{{author_email}}" style="display: none;">{{author_email}}</a>
    {% endif %}

    {% if user_group <= 2 %}
    	<a style=" margin-right:2px;display:inline-block; color:black; " onClick='changeName(this.parentNode, {{info_name}}, {{visible_user_json}}, {{jscriptAnonFix}})' title="Show full user information"><i class="fas fa-eye" aria-hidden="true"></i></a>
	{% endif %}

	{% if not first %}
		<a class="expand btn btn-default btn-sm" style="float:right; text-decoration:none; margin-top: -8px" onClick="hidePosts(this, {{post_id}})"></a>
	{% endif %}

	{% if user_group <= 2 and post_author == current_user %}
		{% if user_group <= 2 and deleted %}
			{% set ud_toggle_status = "false" %}
			{% set ud_button_title = "Undelete post" %}
			{% set ud_button_icon = "fa-undo" %}
		{% else %}
			{% set ud_toggle_status = "true" %}
			{% set ud_button_title = "Remove post" %}
			{% set ud_button_icon = "fa-trash" %}
		{% endif %}
		<a class="post_button" style="bottom: 1px;position:relative; display:inline-block; float:right;" onClick="deletePostToggle({{ud_toggle_status}}, {{thread_id}}, {{post_id}}, {{post_author}}, '{$function_date($date,'n/j g:i A')}' )" title="{$ud_button_title}"><i class="fa {$ud_button_icon}" aria-hidden="true"></i></a>
	{% endif %}

	{% if user_group <= 2 and post_author == current_user %}
		{% if first %}
			{% set should_edit_thread = "true" %}
			{% set edit_button_title = "Edit thread and post" %}
		{% else %}
			{% set should_edit_thread = "false" %}
			{% set edit_button_title = "Edit thread and post" %}
		{% endif %}
		<a class="post_button" style="position:relative; display:inline-block; color:black; float:right;" onClick="editPost({{post_id}}, {{thread_id}}, {{should_edit_thread}})" title="{{edit_button_title}}"><i class="fas fa-edit" aria-hidden="true"></i></a>
	{% endif %}

	{% if user_group <= post_author == current_user %}

	{% endif %}
</div>